<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/koyumavi"
    tools:context=".Fragments.YeniSifreFragment">


    <TextView
        android:id="@+id/textView20"
        android:layout_width="280dp"
        android:layout_height="64dp"
        android:layout_marginTop="248dp"
        android:fontFamily="@font/oilvarebase"
        android:text="UNIAPP"
        android:textColor="@color/turuncu"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/yenisifre"
        android:layout_width="260dp"
        android:layout_height="45dp"
        android:layout_marginTop="70dp"
        android:ems="10"
        android:hint="Yeni Şifre"
        android:inputType="text"
        android:textColor="@color/ArkaPlanRengi"
        android:textColorHighlight="@color/ArkaPlanRengi"
        android:textColorHint="@color/koyuGri"
        android:textColorLink="@color/ArkaPlanRengi"
        app:layout_constraintBottom_toTopOf="@+id/yenisifre"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView20"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/yenisifretekrar"
        android:layout_width="260dp"
        android:layout_height="45dp"
        android:layout_marginBottom="28dp"
        android:ems="10"
        android:hint="Yeni Şifre Tekrarı"
        android:inputType="text"
        android:textColor="@color/ArkaPlanRengi"
        android:textColorHighlight="@color/ArkaPlanRengi"
        android:textColorHint="@color/koyuGri"
        android:textColorLink="@color/ArkaPlanRengi"
        app:layout_constraintBottom_toTopOf="@+id/YeniSifreOnay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/YeniSifreOnay"
        android:layout_width="116dp"
        android:layout_height="55dp"
        android:layout_marginBottom="344dp"
        android:backgroundTint="@color/turuncu"
        android:text="Onayla"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>