<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.SifremiUnuttumFragment">

    <EditText
        android:id="@+id/sifremi_unuttum_mail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:hint="Mail adresinizi girin"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/sifre_gonder_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Yeni Şifre Gönder"
        app:layout_constraintEnd_toEndOf="@+id/sifremi_unuttum_mail"
        app:layout_constraintStart_toStartOf="@+id/sifremi_unuttum_mail"
        app:layout_constraintTop_toBottomOf="@+id/sifremi_unuttum_mail" />

</androidx.constraintlayout.widget.ConstraintLayout>